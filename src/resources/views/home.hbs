<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-6 col-md-4 col-xl-3">
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top card-img-css" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title card-title-height text-dark">{{this.name}}</h5>
                    </a>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>